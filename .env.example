# .env.example

# Supabase Configuration
# URL to your Supabase project (found in the Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://example.supabase.co

# Anon/public key for client-side operations (found in API settings)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.example-anon-key

# Service role key for secure server-side operations (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.example-service-key

# Application Settings
# Base URL where your application is hosted (used for callbacks and absolute URLs)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Developer Settings
# Code used for developer quick login (development only)
NEXT_PUBLIC_DEVELOPER_CODE=dev123

# AI & Analysis Features
# OpenAI API key for report analysis and AI assistant
OPENAI_API_KEY=sk-example1234567890abcdef

# Medicine Information API
MEDICINE_API_KEY=example_medicine_api_key_12345

# Email Service Configuration (for notifications and password resets)
EMAIL_PROVIDER=sendgrid  # Options: sendgrid, mailgun, etc.
EMAIL_API_KEY=example_email_service_key
EMAIL_FROM=notifications@medgenius.com

# Storage Configuration (if using separate file storage)
STORAGE_PROVIDER=s3  # Options: s3, local
STORAGE_S3_ACCESS_KEY=AKIAEXAMPLE12345
STORAGE_S3_SECRET_KEY=abcdef1234567890/example/secret/key
STORAGE_S3_BUCKET=medgenius-files
STORAGE_S3_REGION=us-west-2

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=G-EXAMPLE12345

# Feature Flags
NEXT_PUBLIC_ENABLE_TELEMEDICINE=true
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_DOCUMENT_OCR=true

# Security Settings
SESSION_SECRET=very_long_random_string_at_least_32_characters
ENCRYPTION_KEY=another_secure_random_key_for_sensitive_data

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error